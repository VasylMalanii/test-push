{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@screens/*": ["screens/*"],
      "@navigation/*": ["navigation/*"],
      "@styles/*": ["styles/*"],
      "@api/*": ["api/*"],
      "@providers/*": ["providers/*"],
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
